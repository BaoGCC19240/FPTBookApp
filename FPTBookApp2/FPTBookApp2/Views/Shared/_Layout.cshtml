<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FPTBook Applicaiont</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/style.css")
    <script language="javascript">
        function Confirm() {
            if (!window.confirm('Are you sure?')) {
                return false;
            }
        }
    </script>
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="navbar">
                <div class="logo">

                    <img src="~/Image/logo.png" width="170px" , height="85px" />
                </div>
                <nav class="navbar navbar-light bg-light">
                    <form class="form-inline">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </nav>
                <nav>
                    <ul id="MenuItems">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        @Html.Action("Nav", "Home")
                        @if (Convert.ToInt32(Session["state"]) ==1)
                        {
                            <li>
                                <div class="dropdowna">
                                    <button class="dropbtna">
                                        Management
                                        <i class="fa fa-caret-down"></i>
                                    </button>
                                    <div class="dropdown-contenta">
                                        @Html.ActionLink("Manage Categories", "Index", "categories")
                                        @Html.ActionLink("Manage Products", "Index", "products")
                                        @Html.ActionLink("Manage Authors", "Index", "authors")

                                    </div>

                                </div>
                            </li>
                        }
                        else
                        {

                        }


                        @if (Session["fullname"] == null)
                        {

                            <li>@Html.ActionLink("Login", "Login", "Accounts")</li>
                            <li>@Html.ActionLink("Register", "Register", "Accounts")</li>

                        }
                        else
                        {
                            <li>
                                <a href="?page=update_customer">
                                    <i class="fa fa-user" aria-hidden="true">
                                        Hi, @Session["fullname"]
                                    </i>
                                </a>
                            </li>
                            <li>@Html.ActionLink("Logout", "Logout", "Accounts")</li>

                        }


                    </ul>
                </nav>
                <a href="?page=cart"><img src="~/Image/cart.png" width="30px" height="30px"></a>
                <img src="images/menu.png" class="menu-icon"
                     onclick="menutoggle()">
            </div>
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer class="container row">
                        <p>&copy; @DateTime.Now.Year - FPTBook Application</p>
                    </footer>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
    </body>
</html>
